<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.HelloWordPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Some text" x:Name="label"></Label>
        <Slider x:Name="slider" ValueChanged="Slider_ValueChanged"></Slider>
        <Button x:Name="start" Text="Start" Clicked="Start_Clicked"></Button>
        <Button x:Name="stop" Text="Stop" Clicked="Stop_Clicked"></Button>
    </StackLayout>
</ContentPage>